extends ../layouts/common.pug

block content
  h1 Products

  .d-flex.align-items-center
    form.ml-auto(action='', method='GET', class="d-flex")
      input(type='text', name='q', value=contentSearch, class="form-control")
      button(class="btn btn-primary ml-2") Search

  .row.row-cols-1.row-cols-md-4
    each product in products
      .col.mb-4
        .card
          img.card-img-top(src= product.image)
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            div
              button.btn.btn-primary(type= 'button') Add a cart
  
  nav(aria-label='Page navigation example')
    - var page = 1;
    ul.pagination.justify-content-center
      while page <= numberOfPages
        li.page-item
          a.page-link(href='/products?page=' + page)= page++
      
